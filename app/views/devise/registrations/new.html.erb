<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<div id="lp-register">
  <div class="container wrapper">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-1">
        <div class="reg-form-container"> 
            
              <!-- Register/Login Tabs-->
          <div class="reg-options">
            <ul class="nav nav-tabs">
              <li class="active"><%= link_to 'Sign up', new_user_registration_path %></li>
              <li><%= link_to 'Sign in', new_user_session_path%></li>
            </ul><!--Tabs End-->
          </div>

          <div class="tab-content">
            <div class="tab-pane active" id="register">
              <h3>Register Now !!!</h3>
              <p class="text-muted">Be cool and join today. </p>
                  
                  <!--Register Form-->
              <form name="registration_form" id='registration_form' class="form-inline">
                <div class="row">
                  <div class="form-group col-xs-12">
                    <%= f.label :name, "Name", class: "sr-only" %><br />
                    <%= f.text_field :name, class: "form-control input-group-lg", placeholder: "Name" %>
                  </div>

                  <div class="form-group col-xs-12">
                    <%= f.label :DOB,"Birthday" %><br />
                    <%= f.date_field :DOB, class: "form-control input-group-lg", placeholder: "Birthday" %>
                  </div>

                  <div class="form-group col-xs-12">
                    <%= f.label :Gender%><br />
                    <%= f.radio_button :Gender, "Male",:checked => true %>
                    <%= f.label :Male %>
                    <%= f.radio_button :Gender, "Female",:checked => true %>
                    <%= f.label :Female %>
                  </div>


                  <div class="form-group col-xs-12">
                    <%= f.label :email, class: "sr-only" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-group-lg", placeholder: "Email" %>
                  </div>

                  <div class="form-group col-xs-12">
                    <%= f.label :password, class: "sr-only" %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control input-group-lg", placeholder: "Password" %>
                  </div>

                  <div class="form-group col-xs-12">
                    <%= f.label :password_confirmation, class: "sr-only" %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control input-group-lg", placeholder: "Confirm - Password" %>
                  </div>

                  <p><%= link_to 'Already have an account?', new_user_session_path%></p>

                  <div class="form-group col-xs-12">
                    <%= f.submit "Sign up",class: "btn btn-primary" %>
                  </div>


                </div>
              </form>
              <%- resource_class.omniauth_providers.each do |provider| %>
                <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
              <% end -%>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>
