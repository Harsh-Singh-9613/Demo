<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div id="lp-register">
  <div class="container wrapper">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-1">
        <div class="reg-form-container">

          <div class="reg-options">
            <ul class="nav nav-tabs">
              <li class="active"><%= link_to 'Sign up', new_user_registration_path %></li>
              <li><%= link_to 'Sign in', new_user_session_path%></li>
            </ul><!--Tabs End-->
          </div>
          <div class="tab-pane" id="login">
            <h3>Login</h3>
            <p class="text-muted">Log into your account</p>
          </div>

          <form name="Login_form" id='Login_form'>
               <div class="row">
                <div class="form-group col-xs-12">
                  <%= f.label :email, class: "sr-only" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-group-lg", placeholder: "Email" %>
                </div>
              </div>
              <div class="row">
                <div class="form-group col-xs-12">
                  <%= f.label :password, class: "sr-only" %><br />
                  <%= f.password_field :password, autocomplete: "current-password",class: "form-control input-group-lg", placeholder: "Password" %>
                </div>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="row">
                  <div class="form-group col-xs-12">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                </div>
            <% end %>
            </form>
            <p>
            
            </p>

            <div class="actions">
              <%= f.submit "Log in", class: "btn btn-primary" %>
            </div>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
            <% end -%>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>



  




