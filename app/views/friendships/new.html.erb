<div id="main">
  <div class="container">
    <div class="row">
      <!-- About Me (Left Sidebar) Start -->
      <div class="col-md-3">
        <div class="about-fixed">
          <div class="my-pic">
            <% if current_user.photo.attached? %>
              <%= image_tag(current_user.photo, style: 'width:100%') %>
            <% else %>
              <h5>Image not available</h5>
            <% end %>
                  
          </div>
        
          <div class="my-detail">
            <div class="white-spacing">
              <p>
                <strong>Name:</strong>
                <%= current_user.name %>
              </p>
              <p>
                <strong>Email:</strong>
                <%= current_user.email %>
              </p>

              <p>
                <strong>Wish me on:</strong>
                <%= current_user.DOB %>
              </p>

              <p>
                <strong>Gender:</strong>
                <%= current_user.Gender %>
              </p>
            </div> 
          </div>
        </div>
      </div>

      <div class="col-md-9">
        <div class="col-md-12 page-body">
          <div class="row">
              <%= form_tag user_index_path, :method => 'get' do %>
                <%= text_field_tag :search, params[:search] %>
                <%= submit_tag "Search" %>
              <% end %>
            <div class="col-md-12 content-page">
              <!-- Blog Post Start -->
              <% @user.each do |user|%>
                <div class="col-md-12 blog-post">
                    <% if user.photo.attached? %>
                    <%= image_tag(user.photo,style: 'float :right;width:10%') %>
                    <% end %>
                  <div class="post-title">
                    <%= user.email %><br>
                 
                    <%= status_checker(user,current_user) %>
                  </div>
 
                </div>
              <% end%>              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


















