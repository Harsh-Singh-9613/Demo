<%= form_with(model: feed, local: true) do |form| %>
  <%= render "error" %>
  
  <form class="form-horizontal">
    <div class="form-group">
      <%= form.label :post,class:"control-label col-sm-2"%>
      <div class="col-sm-10">
        <%= form.text_field :post, class:"form-control ", placeholder: "Write what you wish"%>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :image, class:"control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.file_field :image, class:"form-control", style: 'width:80%'%>
      </div>
    </div>


    <div class="form-group">
      <%= form.label :discription, class:"control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= form.text_area :discription, class:"form-control ", placeholder: "Describe Here"%>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :privacy, class: "control-label col-sm-2" %><br />
      <%= form.radio_button :privacy, "public",:checked => true %>
      <%= form.label :public %>
      <%= form.radio_button :privacy, "only_me",:checked => true %>
      <%= form.label :only_me%>
      <%= form.radio_button :privacy, "friend",:checked => true %>
      <%= form.label :friend %>
    </div>



    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
       <button class:"btn btn-default"> <%= form.submit %></button>
      </div>
    </div>
  </form>
<% end %>
